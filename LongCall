import matplotlib.pyplot as plt
import numpy as np

def payoff(spot, strike):
    return np.maximum(spot - strike, 0) #if Strike price > Spot Price, payoff = 0

spot = np.arange(0, 151, 1) #array of price from 0 to 150 with an interval of 1

strike = 100 #strike price of the option 

payoff = payoff(spot, strike) #array of payoffs 

plt.figure(figsize=(8, 6))
plt.plot(spot, payoff, color = "black", label="Payoff")
plt.xlabel("Spot Price")
plt.ylabel("Payoff")
plt.title("Payoff European Call Option")
plt.axvline(strike, color='red', linestyle='--', lw=0.5, label="Strike Price")
plt.legend()
plt.grid(True)
plt.show()
